<j:jelly xmlns:j="jelly:core" xmlns:st="jelly:stapler" xmlns:d="jelly:define" xmlns:l="/lib/layout"
         xmlns:t="/lib/hudson" xmlns:f="/lib/form">

  <f:entry title="Verbose" description="Show Mirah AST generation">
    <f:checkbox name="mirah.verbose" checked="${instance.verbose}"/>
  </f:entry>
  <f:entry title="Script" description="Mirah script">
    <f:textarea name="mirah.command" value="${instance.command}"/>
  </f:entry>

</j:jelly>
